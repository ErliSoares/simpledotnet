<?xml version="1.0" encoding="utf-8" ?>
<basicLibrary>
  <log4net>
    <appender name="NUnit" type="log4net.Appender.ConsoleAppender, log4net">
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%-5p - %m%n" />
      </layout>
    </appender>

    <root>
      <level value="INFO"/>
      <appender-ref ref="NUnit"/>
    </root>
    <logger name="Simple.Tests">
      <level value="ALL"/>
    </logger>
  </log4net>
</basicLibrary>